<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_head_group">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/group_about_programm"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/version"
                    android:textColor="@color/daynames_background"
                    android:textSize="@dimen/size_text_child"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"/>

        <LinearLayout
            android:id="@+id/lay_license"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/license"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"/>

        <LinearLayout
            android:id="@+id/lay_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/rate"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/group_sharing"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay_facebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/facebook1"/>

            <TextView
                android:id="@+id/txt_face_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/facebook"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_facebook_descroption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_face_user_name"
                android:layout_centerHorizontal="true"
                android:text="@string/not_authorized"
                android:textColor="@color/daynames_text_color"
                android:textSize="@dimen/size_text_child_desctibe"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_head_group">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/group_contacts"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_connect_with_developer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/left_padding_head_group"
            android:paddingLeft="@dimen/left_padding_child_group"
            android:paddingRight="@dimen/left_padding_head_group"
            android:paddingTop="@dimen/left_padding_head_group">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="@string/connect_with_developers"
                    android:textColor="@color/daynames_background"
                    android:textSize="@dimen/size_text_child"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_connect_with_developers_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/connect_with_developers_description"
                    android:textColor="@color/daynames_text_color"
                    android:textSize="@dimen/size_text_child_desctibe"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_head_group">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/notifications"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rad_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radbtn_do_not_notify">

            <RadioButton
                android:id="@+id/radbtn_six_hours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_padding_child_group"
                android:minHeight="@dimen/height_child_group"
                android:singleLine="true"
                android:text="@string/every_6_hours"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <RadioButton
                android:id="@+id/radbtn_three_hours"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_padding_child_group"
                android:minHeight="@dimen/height_child_group"
                android:singleLine="true"
                android:text="@string/every_3_hours"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_gray"/>

            <RadioButton
                android:id="@+id/radbtn_do_not_notify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left_padding_child_group"
                android:minHeight="@dimen/height_child_group"
                android:text="@string/do_not_notify"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold"/>
        </RadioGroup>
    </LinearLayout>

</ScrollView><!-- From: file:/home/alex/WorkProjects/DailyStatus/DailyStatusGradle/app/src/main/res/layout/settings.xml -->