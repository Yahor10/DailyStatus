<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:minHeight="@dimen/height_item"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingLeft="@dimen/left_padding_item_event"
              android:paddingRight="5dp"
              android:paddingTop="5dp">

    <ImageView
        android:id="@+id/img_item_event"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_event"/>

    <TextView
        android:id="@+id/txt_item_event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="@string/daily_status"
        android:textColor="#aa000000"
        android:textSize="21sp"/>

</LinearLayout><!-- From: file:/home/alex/WorkProjects/DailyStatus/DailyStatusGradle/app/src/main/res/layout/item_event_list.xml -->