<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_title"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_padding_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/title_dialog_add_event"
            android:textColor="@color/red_border"
            android:textSize="@dimen/size_text_title"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/red_border" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/eventText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="What happens with you today"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/red_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addEventOK"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_but_red_rounded"
            android:text="@android:string/ok"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/addEventCancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:background="@drawable/selector_but_red_rounded"
            android:text="@android:string/cancel"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/ychabatarou/gitProjects/DailyStatus/app/src/main/res/layout/add_day_event.xml -->