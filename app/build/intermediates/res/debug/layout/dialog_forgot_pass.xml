<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/gray_lite" >

    <LinearLayout
        android:id="@+id/lay_title_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:text="@string/daily_status"
            android:textColor="@color/red_border"
            android:textSize="22dp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/red_border" />
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/berry" />

    <TextView
        android:id="@+id/txt_dialog_forgot_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_title_dialog"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/send_forgot_password"
        android:textColor="@color/daynames_background"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_dialog_forgot_title"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel_send_password"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_yellow_rounded"
            android:text="@string/cancel"
            android:textColor="@color/cian" />

        <Button
            android:id="@+id/btn_send_password"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/selector_but_red_rounded"
            android:text="@string/ok"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/alex-pers/Documents/android/repositories/DailyStatus/app/src/main/res/layout/dialog_forgot_pass.xml -->