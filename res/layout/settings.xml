<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_head_group" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/group_about_programm"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_child_group" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/version"
                    android:textColor="@color/daynames_background"
                    android:textSize="@dimen/size_text_child"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_version_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="@string/version"
                    android:textColor="@color/daynames_text_color"
                    android:textSize="@dimen/size_text_child_desctibe" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:id="@+id/lay_license"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_child_group" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/license"
                android:textColor="@color/daynames_background"
                android:textSize="@dimen/size_text_child"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_head_group" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/group_sharing"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_facebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_child_group" >

            <ImageView
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/facebook" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/left_padding_head_group" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/facebook"
                    android:textColor="@color/daynames_background"
                    android:textSize="@dimen/size_text_child"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_facebook_connektion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="@string/not_authorized"
                    android:textColor="@color/daynames_text_color"
                    android:textSize="@dimen/size_text_child_desctibe" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:id="@+id/lay_twitter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_child_group" >

            <ImageView
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:layout_gravity="center_vertical"
                android:src="@drawable/twitter" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/left_padding_head_group" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/twitter"
                    android:textColor="@color/daynames_background"
                    android:textSize="@dimen/size_text_child"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_twitter_connektion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="@string/not_authorized"
                    android:textColor="@color/daynames_text_color"
                    android:textSize="@dimen/size_text_child_desctibe" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_head_group"
            android:background="@color/bg_gray"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/left_padding_head_group" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/group_contacts"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_group"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_connect_with_developer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/height_child_group"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/left_padding_head_group"
            android:paddingLeft="@dimen/left_padding_child_group"
            android:paddingRight="@dimen/left_padding_head_group"
            android:paddingTop="@dimen/left_padding_head_group" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/connect_with_developers"
                    android:textColor="@color/daynames_background"
                    android:textSize="@dimen/size_text_child"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_connect_with_developers_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="@string/connect_with_developers_description"
                    android:textColor="@color/daynames_text_color"
                    android:textSize="@dimen/size_text_child_desctibe" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />
    </LinearLayout>

</ScrollView>