<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_title"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_padding_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/title_dialog_add_event"
            android:textColor="@color/daynames_background"
            android:textSize="@dimen/size_text_title"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

    <EditText
        android:id="@+id/eventText"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="What happens with you today"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.75" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_rainbow" />

        <Button
            android:id="@+id/addEventOK"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/image"
            android:layout_centerVertical="true"
            android:background="@color/violet_new"
            android:text="@android:string/ok"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/addEventCancel"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/image"
            android:layout_centerVertical="true"
            android:layout_marginRight="44dp"
            android:background="@color/violet_new"
            android:text="@android:string/cancel"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>