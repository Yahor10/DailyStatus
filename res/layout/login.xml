<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_lite" >

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/daily_status"
        android:textColor="@color/red_border"
        android:textSize="@dimen/dayli_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_login_icon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcomeText"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <EditText
                android:id="@+id/edtLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/selector_edit_text"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="@color/red_border"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_edit_text"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="@color/red_border"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_but_red_rounded"
                android:text="@string/log_in"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="#00ffffff"
                android:text="@string/create_account"
                android:textColor="@color/red_border"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/forgot_password" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>